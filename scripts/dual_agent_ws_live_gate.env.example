# External Claude (Linode) live-gate config
#
# Usage:
#   set -a
#   source scripts/dual_agent_ws_live_gate.env.example
#   set +a
#   clojure -M scripts/dual_agent_ws_live_gate.clj
#
# Notes:
# - FUTON3C_PUBLIC_WS_BASE must be reachable from your Linode-hosted Claude runtime.
# - Use wss:// in production.

FUTON3C_BIND_HOST=0.0.0.0
FUTON3C_PORT=7070
FUTON3C_PUBLIC_WS_BASE=wss://YOUR-LINODE-HOSTNAME:7070

FUTON3C_SESSION_ID=sess-alleycat-live
FUTON3C_WAIT_MS=300000

# true: wait for external claude-1 over network
# false: run local claude loopback client (deterministic smoke)
FUTON3C_EXTERNAL_CLAUDE=true

# Require claude-1 to send action msg_id=alleycat-claude-live-1
FUTON3C_REQUIRE_CLAUDE_ACTION=true

# Optional: use real backend instead of mock backend
FUTON3C_USE_REAL_BACKEND=false
FUTON3C_REAL_BACKEND_CWD=/home/joe/code/futon3c
